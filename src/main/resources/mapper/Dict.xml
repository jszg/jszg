<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace 非常重要：必须是 Mapper 类的全路径-->
<mapper namespace="com.xtuer.mapper.DictMapper">
    <select id="findByDictType" resultType="Dict">
        SELECT DIC_ID as id, NAME as name FROM T_DICT WHERE DT_ID = #{dt_id}
    </select>

    <select id="findTeaGrade" resultType="Dict">
        select d.DIC_ID as id, d.NAME as name
        from t_dict d
        where d.dt_id = 23 and
          <![CDATA[rownum <= 5]]>
        order by d.code
    </select>
</mapper>
